<%# # en tant qu'utilisateur je peux voir la question %>

<div class = "container">
  <h1 id= "question-new-titre">Invente une réponse à la question</h1>
  <div class= "question-card">
      <h1>Question</h1>
    <p><%= @question.question %></p>
  </div>
  <br>
  <%# # donner ma réponse à la question %>
  <div data-controller="submit_automatic">
  <%= simple_form_for([@game, @question, @proposal]) do |f| %>
    <%= f.input :proposal, input_html: { class: "user-input"}%>
    <%= f.submit %>
  <% end %>
  </div>
</div>
