<H1>BIENVENUE DANS LA PARTIE <%= @game.name.upcase %> </H1>

<h2>CHOISIS TON PSEUDO :</h2>

<%= simple_form_for(@avatar) do |f| %>
    <%= f.input :name, input_html: { class: "user-input", placeholder:"Ton super pseudo" } %>

    <h2> CHOISIS TON AVATAR :</h2>

    <div id="carouselExample" class="carousel slide" data-controller="autoselect">
      <div class="carousel-inner" data-autoselect-target="avatarSelect">

        <div class="carousel-item active">
          <div class="avatar-item">
            <input type="radio" id="avatar1" name="url" value="avatar1">
            <label class="avatar-img-wrapper" for="avatar1">
              <%= image_tag "avatars/avatar1.png"%>
            </label>
          </div>
        </div>

        <div class="carousel-item">
          <div class="avatar-item">
            <input type="radio" id="avatar2" name="url" value="avatar2">
            <label class="avatar-img-wrapper" for="avatar2">
              <%= image_tag "avatars/avatar2.png"%>
            </label>
          </div>
        </div>

        <div class="carousel-item">
          <div class="avatar-item">
            <input type="radio" id="avatar3" name="url" value="avatar3">
            <label class="avatar-img-wrapper" for="avatar3">
              <%= image_tag "avatars/avatar3.png"%>
            </label>
          </div>
        </div>
        <div class="carousel-item">
          <div class="avatar-item">
            <input type="radio" id="avatar4" name="url" value="avatar4">
            <label class="avatar-img-wrapper" for="avatar4">
              <%= image_tag "avatars/avatar4.png"%>
            </label>
          </div>
        </div>
        <div class="carousel-item">
          <div class="avatar-item">
            <input type="radio" id="avatar5" name="url" value="avatar5">
            <label class="avatar-img-wrapper" for="avatar5">
              <%= image_tag "avatars/avatar5.png"%>
            </label>
          </div>
        </div>
        <div class="carousel-item">
          <div class="avatar-item">
            <input type="radio" id="avatar6" name="url" value="avatar6">
            <label class="avatar-img-wrapper" for="avatar6">
              <%= image_tag "avatars/avatar6.png"%>
            </label>
          </div>
        </div>
      </div>
      <button data-action="click->autoselect#select" class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button data-action="click->autoselect#select" class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>

    <%= hidden_field_tag :game_id, @game.id%>
    <%= f.button :submit, "Rejoindre la partie", class: "button"%>
  <% end %>
